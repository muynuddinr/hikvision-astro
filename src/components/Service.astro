---
import img from '../assets/camera.png';

const features = [
    {
        title: "Smart Detection",
        description: "Advanced AI-powered motion and object detection",
        icon: "camera",
        stats: { value: "99.9%", label: "Detection Accuracy" },
        gradient: "from-red-500 to-rose-500"
    },
    {
        title: "Night Vision",
        description: "Crystal clear footage in complete darkness",
        icon: "moon",
        stats: { value: "0.001 lux", label: "Min Illumination" },
        gradient: "from-red-400 to-red-600"
    },
    {
        title: "4K Resolution",
        description: "Ultra HD video quality with real-time streaming",
        icon: "video",
        stats: { value: "8MP", label: "Resolution" },
        gradient: "from-rose-500 to-red-500"
    }
];

const solutions = [
    {
        name: "Enterprise Surveillance",
        description: "Complete CCTV solution for large facilities",
        features: ["Multi-Camera Setup", "Central Management", "24/7 Recording"],
        popular: true
    },
    {
        name: "Business Security",
        description: "Professional camera system for medium businesses",
        features: ["HD Cameras", "Cloud Storage", "Mobile Viewing"],
        popular: false
    },
    {
        name: "Home Protection",
        description: "Essential security cameras for residential use",
        features: ["Motion Detection", "Night Vision", "Mobile Alerts"],
        popular: false
    }
];

const techStack = [
    { name: "ColorVu", icon: "colorvu.svg" },
    { name: "DarkFighter", icon: "darkfighter.svg" },
    { name: "AcuSense", icon: "acusense.svg" },
    { name: "iVMS", icon: "ivms.svg" }
];
---

<div class="relative min-h-screen">
    <!-- Replace existing background div with enhanced version for each section -->
    <div class="absolute inset-0">
        <div class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(circle_at_30%_30%,rgba(239,68,68,0.15),transparent_70%)] animate-pulse-slow"></div>
        <div class="absolute bottom-0 right-0 w-full h-full bg-[radial-gradient(circle_at_70%_70%,rgba(220,38,38,0.12),transparent_70%)] animate-pulse-slower"></div>
        <div class="absolute hidden lg:block">
            {[...Array(6)].map((_, i) => (
                <div class={`floating-shape-${i + 1} absolute rounded-full mix-blend-multiply filter blur-xl opacity-70`}></div>
            ))}
        </div>
    </div>

    <!-- Hero Section -->
    <section class="relative min-h-[82vh] bg-gradient-to-b from-white via-red-50/30 to-white overflow-hidden">
        <!-- Enhanced Background Elements with Movement -->
        <div class="absolute inset-0">
          <div class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(circle_at_30%_30%,rgba(239,68,68,0.15),transparent_70%)] animate-pulse-slow"></div>
          <div class="absolute bottom-0 right-0 w-full h-full bg-[radial-gradient(circle_at_70%_70%,rgba(220,38,38,0.12),transparent_70%)] animate-pulse-slower"></div>
          <!-- Added floating shapes -->
          <div class="absolute hidden lg:block">
            {[...Array(6)].map((_, i) => (
              <div class={`floating-shape-${i + 1} absolute rounded-full mix-blend-multiply filter blur-xl opacity-70`}></div>
            ))}
          </div>
        </div>
    <div class="relative">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-20 pb-32">
            <div class="flex flex-col lg:flex-row items-center gap-12">
                <div class="flex-1 text-center lg:text-left">
                    <div class="inline-flex items-center px-4 py-2 rounded-full bg-gradient-to-r from-red-500/10 to-rose-500/10 border border-red-500/20 backdrop-blur-sm mb-8">
                        <span class="animate-pulse w-2 h-2 rounded-full bg-red-500 mr-2"></span>
                        <span class="text-sm font-medium text-red-500">Next-Gen Security</span>
                    </div>

                    <h1 class="text-5xl lg:text-7xl font-bold tracking-tight mb-6">
                        <span class="text-black">Professional Security with</span>
                        <span class="block text-red-600">
                            Hikvision Cameras
                        </span>
                    </h1>

                    <p class="text-xl text-black mb-8 max-w-2xl">
                        Experience state-of-the-art surveillance with Hikvision's advanced 
                        camera systems, featuring AI-powered detection and crystal-clear imaging.
                    </p>

                    <div class="flex flex-wrap gap-4 justify-center lg:justify-start">
                        <button class="relative group px-8 py-4 bg-gradient-to-r from-red-500 to-rose-500 rounded-xl font-semibold text-white">
                            Get Started
                            <div class="absolute inset-0 rounded-xl bg-white/20 opacity-0 group-hover:opacity-100 transition-opacity"></div>
                        </button>
                        <button class="px-8 py-4 border border-gray-700 rounded-xl text-black hover:bg-white/5 transition-colors">
                            Watch Demo
                        </button>
                    </div>
                </div>

                <div class="flex-1 relative">
                    <div class="absolute inset-0 bg-gradient-to-r from-red-500/20 to-rose-500/20 blur-3xl"></div>
                    <img 
                        src={img.src} 
                        alt="AI Security Platform" 
                        class="relative animate-float"
                        width="600"
                        height="600"
                    />
                </div>
            </div>
        </div>
    </div>

    <!-- Features Grid -->
    <div class="relative py-24">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {features.map(feature => (
                    <div class="group relative">
                        <div class={`absolute inset-0 bg-gradient-to-b ${feature.gradient} rounded-2xl opacity-0 group-hover:opacity-10 transition-opacity duration-300`}></div>
                        <div class="relative h-full p-8 rounded-2xl bg-white border border-gray-200 hover:border-red-200 transition-all duration-300">
                            <div class={`inline-flex p-3 rounded-xl bg-gradient-to-r ${feature.gradient} mb-6`}>
                                <svg class="w-6 h-6 text-white" />
                            </div>
                            <h3 class="text-xl font-bold text-black mb-3">{feature.title}</h3>
                            <p class="text-gray-700 mb-6">{feature.description}</p>
                            <div class="flex items-baseline">
                                <span class="text-2xl font-bold text-red-600">{feature.stats.value}</span>
                                <span class="ml-2 text-sm text-gray-600">{feature.stats.label}</span>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </div>

    <!-- Tech Stack -->
    <div class="relative py-24">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-bold text-black text-center mb-16">Powered by Advanced Technology</h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
                {techStack.map(tech => (
                    <div class="group relative">
                        <div class="absolute inset-0 bg-gradient-to-b from-red-500 to-rose-500 rounded-2xl opacity-0 group-hover:opacity-10 transition-opacity duration-300"></div>
                        <div class="relative h-full p-6 rounded-2xl bg-white border border-gray-200 hover:border-red-200 transition-all duration-300 flex items-center justify-center">
                            <img src={tech.icon} alt={tech.name} class="h-12 w-auto" />
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </div>

    <!-- Solutions Comparison -->
    <section class="relative min-h-[82vh] bg-gradient-to-b from-white via-red-50/30 to-white overflow-hidden">
        <!-- Enhanced Background Elements with Movement -->
        <div class="absolute inset-0">
          <div class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(circle_at_30%_30%,rgba(239,68,68,0.15),transparent_70%)] animate-pulse-slow"></div>
          <div class="absolute bottom-0 right-0 w-full h-full bg-[radial-gradient(circle_at_70%_70%,rgba(220,38,38,0.12),transparent_70%)] animate-pulse-slower"></div>
          <!-- Added floating shapes -->
          <div class="absolute hidden lg:block">
            {[...Array(6)].map((_, i) => (
              <div class={`floating-shape-${i + 1} absolute rounded-full mix-blend-multiply filter blur-xl opacity-70`}></div>
            ))}
          </div>
        </div>
    <div class="relative py-24 border-t border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-bold text-black text-center mb-16">Security Solutions</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {solutions.map(solution => (
                    <div class="relative group">
                        {solution.popular && (
                            <div class="absolute -top-4 left-1/2 -translate-x-1/2 px-4 py-1 bg-gradient-to-r from-red-500 to-rose-500 rounded-full">
                                <span class="text-sm font-medium text-white">Most Popular</span>
                            </div>
                        )}
                        <div class="h-full p-8 rounded-2xl bg-white border border-gray-200 hover:border-red-200 transition-all duration-300">
                            <h3 class="text-2xl font-bold text-black mb-2">{solution.name}</h3>
                            <p class="text-black mb-6">{solution.description}</p>
                            <ul class="space-y-3">
                                {solution.features.map(feature => (
                                    <li class="flex items-center text-black">
                                        <svg class="w-5 h-5 mr-2 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                        </svg>
                                        {feature}
                                    </li>
                                ))}
                            </ul>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </div>

    <!-- Integration Features -->
    <div class="relative py-24 border-t border-white/10">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-bold text-black text-center mb-16">Advanced Integration Features</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                {[
                    {
                        title: "iVMS-4200",
                        description: "Professional video management software for complete control",
                        icon: "desktop-computer"
                    },
                    {
                        title: "Hik-Connect",
                        description: "Mobile surveillance app for remote monitoring",
                        icon: "device-mobile"
                    },
                    {
                        title: "HikCentral",
                        description: "Centralized security management platform",
                        icon: "server"
                    },
                    {
                        title: "API Integration",
                        description: "Seamless third-party system integration",
                        icon: "code"
                    }
                ].map(item => (
                    <div class="p-6 rounded-2xl bg-white border border-gray-200 hover:border-red-200 transition-all duration-300">
                        <svg class="w-8 h-8 text-red-500 mb-4" />
                        <h3 class="text-xl font-bold text-black mb-2">{item.title}</h3>
                        <p class="text-gray-700">{item.description}</p>
                    </div>
                ))}
            </div>
        </div>
    </div>

    <!-- Support Services -->
    <div class="relative py-24 border-t border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-bold text-black text-center mb-16">Professional Support</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {[
                    {
                        title: "24/7 Technical Support",
                        description: "Round-the-clock assistance from our expert team",
                        gradient: "from-red-500 to-rose-500"
                    },
                    {
                        title: "Professional Installation",
                        description: "Expert setup and configuration by certified technicians",
                        gradient: "from-red-400 to-red-600"
                    },
                    {
                        title: "Training & Consultation",
                        description: "Comprehensive training and system optimization advice",
                        gradient: "from-rose-500 to-red-500"
                    }
                ].map(service => (
                    <div class="group relative p-8 rounded-2xl bg-white border border-gray-200 hover:border-red-200 transition-all duration-300">
                        <div class={`absolute inset-0 bg-gradient-to-r ${service.gradient} rounded-2xl opacity-0 group-hover:opacity-10 transition-opacity`}></div>
                        <h3 class="text-xl font-bold text-black mb-3">{service.title}</h3>
                        <p class="text-black">{service.description}</p>
                    </div>
                ))}
            </div>
        </div>
    </div>
</div>

<style>
.bg-grid-red {
    background-image: linear-gradient(to right, rgba(239,68,68,0.1) 1px, transparent 1px),
                      linear-gradient(to bottom, rgba(239,68,68,0.1) 1px, transparent 1px);
}

@keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
}

.animate-float {
    animation: float 6s ease-in-out infinite;
}

@keyframes pulse {
    0%, 100% { opacity: 0.5; }
    50% { opacity: 1; }
}

.animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

/* Add new animations */
@keyframes pulse-slow {
    0%, 100% { opacity: 0.7; }
    50% { opacity: 0.3; }
}

@keyframes pulse-slower {
    0%, 100% { opacity: 0.6; }
    50% { opacity: 0.2; }
}

.animate-pulse-slow {
    animation: pulse-slow 8s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

.animate-pulse-slower {
    animation: pulse-slower 12s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

/* Add floating shape styles */
.floating-shape-1 { background: rgba(239,68,68,0.3); width: 300px; height: 300px; top: 10%; left: 5%; }
.floating-shape-2 { background: rgba(220,38,38,0.2); width: 200px; height: 200px; top: 60%; right: 10%; }
.floating-shape-3 { background: rgba(239,68,68,0.15); width: 250px; height: 250px; top: 30%; right: 20%; }
.floating-shape-4 { background: rgba(220,38,38,0.25); width: 180px; height: 180px; bottom: 20%; left: 15%; }
.floating-shape-5 { background: rgba(239,68,68,0.2); width: 220px; height: 220px; top: 40%; left: 25%; }
.floating-shape-6 { background: rgba(220,38,38,0.15); width: 280px; height: 280px; bottom: 15%; right: 25%; }
</style>

---
const currentYear = new Date().getFullYear();
---

<footer class="relative overflow-hidden bg-gradient-to-b from-white via-red-50/30 to-white" data-aos="fade-up" data-aos-duration="1000">
    <!-- Background Elements -->
    <div class="absolute inset-0">
        <div class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(circle_at_30%_30%,rgba(239,68,68,0.15),transparent_70%)] animate-pulse-slow"></div>
        <div class="absolute bottom-0 right-0 w-full h-full bg-[radial-gradient(circle_at_70%_70%,rgba(220,38,38,0.12),transparent_70%)] animate-pulse-slower"></div>
        <!-- Floating shapes -->
        <div class="absolute hidden lg:block">
            {[...Array(6)].map((_, i) => (
                <div class={`floating-shape-${i + 1} absolute rounded-full mix-blend-multiply filter blur-xl opacity-70`}></div>
            ))}
        </div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 py-12 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
            <!-- Company Info -->
            <div class="space-y-4" data-aos="fade-right" data-aos-delay="200">
                <h3 class="text-xl font-bold text-gray-900">Company Name</h3>
                <p class="text-sm text-gray-700">Building amazing experiences for the web and beyond.</p>
                <div class="flex space-x-4">
                    <a href="#" class="hover:text-white transition-colors">
                        <span class="sr-only">Facebook</span>
                        <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24"><path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"/></svg>
                    </a>
                    <a href="#" class="hover:text-white transition-colors">
                        <span class="sr-only">Twitter</span>
                        <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24"><path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"/></svg>
                    </a>
                    <a href="#" class="hover:text-white transition-colors">
                        <span class="sr-only">GitHub</span>
                        <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"/></svg>
                    </a>
                </div>
            </div>

            <!-- Quick Links -->
            <div class="space-y-4" data-aos="fade-right" data-aos-delay="400">
                <h3 class="text-xl font-bold text-gray-900">Quick Links</h3>
                <ul class="space-y-2 text-gray-700">
                    <li><a href="/" class="hover:text-white transition-colors">Home</a></li>
                    <li><a href="/About" class="hover:text-white transition-colors">About</a></li>
                    <li><a href="/Service" class="hover:text-white transition-colors">Services</a></li>
                    <li><a href="/Contact" class="hover:text-white transition-colors">Contact</a></li>
                </ul>
            </div>

            <!-- Contact Info -->
            <div class="space-y-4" data-aos="fade-right" data-aos-delay="600">
                <h3 class="text-xl font-bold text-gray-900">Contact</h3>
                <ul class="space-y-2 text-gray-700">
                    <li>123 Street Name</li>
                    <li>City, Country</li>
                    <li>contact@example.com</li>
                    <li>+1 234 567 890</li>
                </ul>
            </div>

            <!-- Newsletter -->
            <div class="space-y-4" data-aos="fade-right" data-aos-delay="800">
                <h3 class="text-xl font-bold text-gray-900">Newsletter</h3>
                <p class="text-sm text-gray-700">Subscribe to our newsletter for updates.</p>
                <form class="flex gap-2">
                    <input
                        type="email"
                        placeholder="Enter your email"
                        class="bg-gray-800 px-4 py-2 rounded-lg flex-grow focus:outline-none focus:ring-2 focus:ring-red-500"
                    />
                    <button
                        type="submit"
                        class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition-colors"
                    >
                        Subscribe
                    </button>
                </form>
            </div>
        </div>

        <!-- Copyright -->
        <div class="mt-12 pt-8 border-t border-gray-200 text-center text-gray-700" data-aos="fade-up" data-aos-delay="1000">
            <p>&copy; {currentYear} Company Name. All rights reserved.</p>
        </div>
    </div>

    <style>
        .animate-pulse-slow {
            animation: pulse 4s cubic-bezier(0.4, 0, 0.6, 1) infinite;
        }

        .animate-pulse-slower {
            animation: pulse 5s cubic-bezier(0.4, 0, 0.6, 1) infinite;
        }

        .floating-shape-1 { background: rgba(239,68,68,0.1); width: 300px; height: 300px; top: 10%; left: 15%; animation: float 8s infinite; }
        .floating-shape-2 { background: rgba(220,38,38,0.1); width: 200px; height: 200px; top: 60%; right: 10%; animation: float 9s infinite; }
        .floating-shape-3 { background: rgba(239,68,68,0.05); width: 150px; height: 150px; top: 30%; right: 20%; animation: float 7s infinite; }
        .floating-shape-4 { background: rgba(239,68,68,0.08); width: 250px; height: 250px; top: 45%; left: 25%; animation: float 10s infinite; }
        .floating-shape-5 { background: rgba(220,38,38,0.07); width: 180px; height: 180px; top: 15%; right: 30%; animation: float 11s infinite; }
        .floating-shape-6 { background: rgba(239,68,68,0.06); width: 220px; height: 220px; top: 70%; left: 35%; animation: float 9s infinite; }

        @keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-20px); }
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }
    </style>
</footer>

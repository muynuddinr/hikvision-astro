---
import 'aos/dist/aos.css';
import img from "../assets/camera.png"
---

<section class="about-section">
  <!-- Hero Section -->
  <div class="relative min-h-screen bg-white overflow-hidden">
    <div class="absolute inset-0">
      <div class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(circle_at_30%_30%,rgba(239,68,68,0.15),transparent_70%)] animate-pulse-slow"></div>
      <div class="absolute bottom-0 right-0 w-full h-full bg-[radial-gradient(circle_at_70%_70%,rgba(220,38,38,0.15),transparent_70%)] animate-pulse-slower"></div>
      <div class="absolute hidden lg:block">
        {[...Array(3)].map((_, i) => (
          <div class={`floating-shape-${i + 1} absolute rounded-full mix-blend-multiply filter blur-xl opacity-70`}></div>
        ))}
      </div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-20">
      <div class="inline-flex items-center px-4 py-2 rounded-full bg-gradient-to-r from-red-500/10 to-rose-500/10 border border-red-500/20 backdrop-blur-sm">
        <span class="animate-pulse w-2 h-2 rounded-full bg-red-500 mr-2"></span>
        <span class="text-sm font-medium text-red-500">ESTABLISHED 2001</span>
      </div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 -mt-4 pt-10">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div class="space-y-6">
          <h1 class="text-6xl font-bold text-gray-900 -mt-2">
            Hikvision's Vision for
            <span class="block mt-2 text-transparent bg-clip-text bg-gradient-to-r from-red-600 to-red-800 animate-gradient">
              smarter security
            </span>
          </h1>
          <p class="text-gray-600 text-lg max-w-xl">
            World's leading provider of innovative security products and solutions, featuring advanced AI-powered surveillance technology.
          </p>
          <div class="flex gap-6 items-center">
            <div class="flex items-center gap-2">
              <span class="text-red-600 font-bold text-2xl">150+</span>
              <span class="text-gray-600">Countries Served</span>
            </div>
            <div class="flex items-center gap-2">
              <span class="text-red-600 font-bold text-2xl">40K+</span>
              <span class="text-gray-600">Employees</span>
            </div>
          </div>
          <ul class="space-y-3">
            <li class="flex items-center gap-2">
              <span class="w-1.5 h-1.5 rounded-full bg-red-500"></span>
              <span class="text-gray-700">AI-Powered Video Analytics</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="w-1.5 h-1.5 rounded-full bg-red-500"></span>
              <span class="text-gray-700">Advanced Security Solutions</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="w-1.5 h-1.5 rounded-full bg-red-500"></span>
              <span class="text-gray-700">Global Technical Support</span>
            </li>
          </ul>
          <div class="flex flex-wrap gap-4">
            <a href="#solutions" class="group px-6 py-3 bg-gradient-to-r from-red-600 to-red-700 text-white rounded-xl hover:shadow-2xl hover:shadow-red-200 transition-all duration-300 hover:-translate-y-0.5">
              View Products
              <span class="inline-block ml-2 transition-transform group-hover:translate-x-1">‚Üí</span>
            </a>
            <a href="#about" class="px-6 py-3 border border-gray-200 text-gray-900 rounded-xl hover:border-red-500 transition-all">
              Learn More
            </a>
          </div>
        </div>
        <div class="relative" data-aos="fade-left">
          <div class="aspect-square rounded-2xl overflow-hidden bg-transparent">
            <div class="absolute inset-0 bg-gradient-to-tr from-transparent to-transparent"></div>
            <img 
              src={img.src} 
              alt="Hikvision security control center" 
              class="w-full h-full object-contain bg-transparent"
            />
          </div>
          <div class="absolute -bottom-8 -left-8 bg-white p-6 rounded-xl border border-gray-200 shadow-xl">
            <div class="flex items-center gap-4">
              <div class="text-4xl">üèÜÔ∏è</div>
              <div>
                <div class="text-gray-900 font-bold">#1 Worldwide</div>
                <div class="text-gray-600">Video Surveillance</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Solutions Section -->
  <section class="relative min-h-[82vh] bg-gradient-to-b from-white via-red-50/30 to-white overflow-hidden">
    <!-- Enhanced Background Elements with Movement -->
    <div class="absolute inset-0">
      <div class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(circle_at_30%_30%,rgba(239,68,68,0.15),transparent_70%)] animate-pulse-slow"></div>
      <div class="absolute bottom-0 right-0 w-full h-full bg-[radial-gradient(circle_at_70%_70%,rgba(220,38,38,0.12),transparent_70%)] animate-pulse-slower"></div>
      <!-- Added floating shapes -->
      <div class="absolute hidden lg:block">
        {[...Array(6)].map((_, i) => (
          <div class={`floating-shape-${i + 1} absolute rounded-full mix-blend-multiply filter blur-xl opacity-70`}></div>
        ))}
      </div>
    </div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Section Header -->
      <div class="text-center mb-20">
        <div class="inline-block animate-float">
          <div class="flex items-center gap-2 px-4 py-2 bg-red-50 rounded-full mb-6">
            <span class="animate-pulse w-2 h-2 rounded-full bg-red-500"></span>
            <span class="text-red-600 font-semibold">Hikvision Product Lines</span>
          </div>
        </div>
        <h2 class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-gray-900 via-red-800 to-gray-900 bg-clip-text text-transparent mb-6">
          Professional Security Solutions
        </h2>
        <p class="text-gray-600 text-lg max-w-2xl mx-auto">
          Discover Hikvision's cutting-edge security technology and comprehensive surveillance systems
        </p>
      </div>

      <!-- Solutions Grid -->
      <div class="grid lg:grid-cols-3 gap-8">
        {[
          {
            icon: "üìπ",
            title: "ColorVu Cameras",
            description: "24/7 colorful imaging with superior night vision capabilities",
            features: [
              "Full-color imaging in darkness",
              "High-performance imaging sensor",
              "Advanced F1.0 large aperture",
              "Warm supplemental lighting"
            ],
            color: "red"
          },
          {
            icon: "üåô",
            title: "DarkFighter Series",
            description: "Ultra-low light cameras for exceptional night monitoring",
            features: [
              "Ultra-low light technology",
              "140dB True WDR",
              "Smart IR technology",
              "3D DNR noise reduction"
            ],
            color: "blue"
          },
          {
            icon: "ü§ñ",
            title: "AcuSense Technology",
            description: "AI-powered false alarm reduction and target classification",
            features: [
              "Human/Vehicle classification",
              "False alarm reduction",
              "Quick target search",
              "Strobe light & audio alarm"
            ],
            color: "green"
          }
        ].map((solution, index) => (
          <div 
            class="group relative bg-white rounded-2xl p-8 hover:shadow-2xl transition-all duration-500 border border-gray-100"
            data-aos="fade-up"
            data-aos-delay={index * 100}
          >
            <!-- Background Pattern -->
            <div class="absolute inset-0 bg-gradient-to-br from-{solution.color}-50 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-500 rounded-2xl"></div>
            
            <!-- Content -->
            <div class="relative z-10">
              <!-- Icon -->
              <div class="mb-6 transform group-hover:scale-110 transition-transform duration-300">
                <div class="w-16 h-16 flex items-center justify-center text-3xl bg-gradient-to-br from-{solution.color}-500 to-{solution.color}-600 text-white rounded-xl shadow-lg">
                  {solution.icon}
                </div>
              </div>

              <!-- Title & Description -->
              <h3 class="text-2xl font-bold text-gray-900 mb-4">{solution.title}</h3>
              <p class="text-gray-600 mb-8">{solution.description}</p>

              <!-- Features -->
              <div class="space-y-4">
                {solution.features.map(feature => (
                  <div class="flex items-center gap-3 group/item">
                    <div class="w-6 h-6 rounded-full flex items-center justify-center bg-{solution.color}-100 group-hover/item:bg-{solution.color}-500 transition-colors">
                      <svg class="w-4 h-4 text-{solution.color}-500 group-hover/item:text-white transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                      </svg>
                    </div>
                    <span class="text-gray-700">{feature}</span>
                  </div>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Stats Section -->
  <div class="bg-white py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-8">
        {[
          { number: "20+", label: "Years of Innovation" },
          { number: "180+", label: "Countries & Regions" },
          { number: "42K+", label: "Global Employees" },
          { number: "10%", label: "Revenue to R&D" }
        ].map((stat, index) => (
          <div 
            class="text-center p-8 bg-white rounded-xl shadow-sm"
            data-aos="fade-up"
            data-aos-delay={index * 100}
          >
            <div class="text-4xl font-bold text-red-600 mb-2">{stat.number}</div>
            <div class="text-gray-600">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Products Section -->
  <div class="bg-white py-32 pt-2">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 ">
      <div class="text-center mb-20">
        <div class="inline-flex items-center justify-center p-2 bg-red-50 rounded-full mb-8">
          <span class="px-4 py-1 text-red-600 font-medium text-sm bg-white rounded-full shadow-sm">
            Hikvision Camera Series
          </span>
        </div>
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          Professional Security Cameras
        </h2>
        <p class="text-gray-600 text-lg max-w-2xl mx-auto">
          Industry-leading surveillance cameras with cutting-edge technology
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {[
          {
            title: "ColorVu Series",
            category: "24/7 Color Imaging",
            image: img.src,
            features: [
              "Full-color imaging 24/7",
              "High performance sensor",
              "Advanced F1.0 large aperture",
              "Supplemental lighting"
            ],
            highlight: "24/7 Color",
            color: "red"
          },
          {
            title: "DarkFighter Series",
            category: "Ultra-Low Light",
            image: img.src,
            features: [
              "Ultra-low light capability",
              "Smart IR technology",
              "140dB WDR",
              "Powered by DarkFighter"
            ],
            highlight: "Ultra Low-Light",
            color: "blue"
          },
          {
            title: "AcuSense Series",
            category: "AI-Powered Detection",
            image: img.src,
            features: [
              "Human/Vehicle Classification",
              "False Alarm Reduction",
              "Quick Target Search",
              "Strobe Light & Audio Alert"
            ],
            highlight: "AI-Powered",
            color: "green"
          },
          {
            title: "TandemVu PTZ",
            category: "Dual-Lens Camera",
            image: img.src,
            features: [
              "Panoramic + PTZ Views",
              "42x Optical Zoom",
              "360¬∞ Coverage",
              "Auto-Tracking"
            ],
            highlight: "Dual-Lens",
            color: "purple"
          },
          {
            title: "Thermal Series",
            category: "Temperature Detection",
            image: img.src,
            features: [
              "Temperature Measurement",
              "Fire Detection",
              "Bi-spectrum Imaging",
              "Long-range Detection"
            ],
            highlight: "Thermal",
            color: "orange"
          },
          {
            title: "PTZ Series",
            category: "Pan-Tilt-Zoom",
            image: img.src,
            features: [
              "50x Optical Zoom",
              "Smart Tracking 2.0",
              "Power Guard Technology",
              "Smart IR up to 250m"
            ],
            highlight: "Smart PTZ",
            color: "teal"
          }
        ].map((product, index) => (
          <div 
            class="group relative bg-white rounded-2xl overflow-hidden hover:shadow-2xl transition-all duration-500"
            data-aos="fade-up"
            data-aos-delay={index * 100}
          >
            <div class="relative h-64 overflow-hidden">
              <img 
                src={product.image}
                alt={product.title}
                class="w-full h-full object-cover transform group-hover:scale-110 transition-all duration-700"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/30 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-500">
                <div class="absolute bottom-0 left-0 right-0 p-6">
                  <span class={`inline-block px-3 py-1 bg-${product.color}-600 text-white text-sm rounded-full mb-2`}>
                    {product.highlight}
                  </span>
                  <h3 class="text-xl font-bold text-white mb-1">{product.title}</h3>
                  <p class="text-gray-200 text-sm">{product.category}</p>
                </div>
              </div>
            </div>
            
            <div class="p-6">
              <div class="space-y-4">
                {product.features.map(feature => (
                  <div class="flex items-center space-x-3">
                    <svg class="w-5 h-5 text-red-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"/>
                    </svg>
                    <span class="text-gray-700">{feature}</span>
                  </div>
                ))}
              </div>
              
              <div class="mt-6">
                <a 
                  href="#" 
                  class="inline-flex items-center justify-center w-full px-4 py-3 bg-gray-900 text-white rounded-xl hover:bg-red-600 transition-colors group"
                >
                  View Specifications
                  <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .about-section {
    overflow-x: hidden;
  }

  .animate-gradient {
    background-size: 200% 200%;
    animation: gradient 8s ease infinite;
  }

  @keyframes gradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .animate-pulse-slow {
    animation: pulse 4s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  .animate-pulse-slower {
    animation: pulse 5s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  .floating-shape-1 { background: rgba(239,68,68,0.2); width: 300px; height: 300px; top: 10%; left: 15%; animation: float 8s infinite; }
  .floating-shape-2 { background: rgba(220,38,38,0.2); width: 200px; height: 200px; top: 60%; right: 10%; animation: float 9s infinite; }
  .floating-shape-3 { background: rgba(239,68,68,0.15); width: 150px; height: 150px; top: 30%; right: 20%; animation: float 7s infinite; }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
</style>

<script>
  import AOS from 'aos';
  
  document.addEventListener('DOMContentLoaded', () => {
    AOS.init({
      duration: 1000,
      once: true,
      offset: 100,
    });
  });
</script>
